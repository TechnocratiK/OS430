#ifndef _KERNEL_THREAD_H
#define _KERNEL_THREAD_H

// thread structure
#define THREAD_ID 0x00
#define THREAD_STACK 0x02
#define THREAD_STACK_SIZE 0x04
#define THREAD_STACK_POINTER 0x06
#define THREAD_PRIORITY 0x08
#define THREAD_TIME 0x0a
#define THREAD_REGISTERS 0x0c
#define THREAD_DESCRIPTOR_SIZE (THREAD_REGISTERS + 0x18)

#endif                                  // _KERNEL_THREAD_H
